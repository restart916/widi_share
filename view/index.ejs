    let imageList = Array.from(Array(9).keys()).map((v) => `bg_0${v}`)
    
    let app = new Vue({
        el: '#app',
        data: {
            shareText: '',
            imageData: '',
            twitterLink: '',
            selectImage: imageList[0],
            selectFont: fontList[0]['family'],
            selectColor: '#FFFFFF',
            currentTab: 0,

            tweetText: '',
            tweetName: '',
            tweetUsername: '',

            canvas: null,

            errorMessage: '',
            loadingMessage: '',
            resultMessage: '',
            fontList,
            imageList,
            mounted: false,            
        },
        mounted: function () {
            this.mounted = true;
            fabric.Object.prototype.objectCaching = true;

            navigator.clipboard.readText()
            .then(text => {
                if (text.length < 5) {
                    return
                }

                try {
                    const url = new URL(text)
                    this.twitterLink = text
                    this.generateImage()
                } catch (error) {
                    this.tweetText = text
                    this.render()
                    // console.log('mounted clipboard readText URL err', error)    
                }

            })
            .catch(err => {
                console.log('mounted clipboard readText err', err)
            });
        },
        methods: {
            render: function () {
                this.errorMessage = ''
                if (this.tweetText == '') {
                    this.errorMessage = 'íŠ¸ìœ— ë§í¬ë¥¼ ë„£ì–´ì£¼ì„¸ìš”'
                    return
